

<style>
  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-bounce {
    animation: bounce 1.5s infinite;
  }


  .animate-bounce-second {
    animation-delay: 0.2s;
  }

  .animate-bounce-third {
    animation-delay: 0.4s;
  }
</style>

<section class="min-h-screen flex flex-col items-center justify-center bg-gray-50 dark:bg-gray-900 relative z-12">
  <div class="text-center">
    <div class="flex justify-center items-center space-x-2 mb-4">
      <div class="w-4 h-4 rounded-full bg-blue-500 animate-bounce"></div>
      <div class="w-4 h-4 rounded-full bg-blue-500 animate-bounce animate-bounce-second"></div>
      <div class="w-4 h-4 rounded-full bg-blue-500 animate-bounce animate-bounce-third"></div>
    </div>
    <h1 class="text-2xl font-semibold text-gray-900 dark:text-white mb-2">
      Upgrading Passkey
    </h1>
    <p class="text-sm text-gray-600 dark:text-gray-400">
      Please wait while for the upgrade to complete.
    </p>
    <div class="mt-6">
      <%= link_to "Skip", root_path, class: "inline-block px-4 py-2 bg-gray-800 text-white text-sm font-medium rounded-lg shadow-md hover:bg-gray-900 focus:ring-4 focus:ring-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 dark:focus:ring-gray-600 focus:outline-none" %>
    </div>
  </div>
</section>

<script name="Automatic Passkey Upgrades">
  document.addEventListener("DOMContentLoaded", async () => {
    setTimeout(() => {
      window.location.href = "/";
    }, 5000);

    setTimeout(() => {
      WebauthnObject.performAutomaticPasskeyUpgrades();
    }, 2000);
  });
</script>
