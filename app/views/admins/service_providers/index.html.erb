<p class="mb-4">
  <%= link_to t('.new'), new_service_provider_path, class: 'inline-block bg-green-600 text-white font-medium py-2 px-4 rounded hover:bg-green-700' %>
</p>

<div class="overflow-x-auto">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50 dark:bg-gray-700">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider"><%= t('.name') %></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider"><%= t('.metadata_url') %></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider"><%= t('.response_hosts') %></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider"><%= t('.actions') %></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-200 uppercase tracking-wider"></th>
      </tr>
    </thead>
    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
      <% @service_providers.each do |service_provider| %>
        <tr id="service_provider_<%= service_provider.id %>">
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
            <%= link_to service_provider.name, service_provider_path(service_provider), class: 'text-blue-600 dark:text-blue-400 hover:underline' %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">
            <%= service_provider.metadata_url %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">
            <%= service_provider.response_hosts %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">
            <%= link_to t('.edit'), edit_service_provider_path(service_provider), class: 'text-blue-600 dark:text-blue-400 hover:underline' %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">
            <%= render 'delete_form', service_provider: service_provider, submit_btn_css: 'inline-block bg-red-600 text-white font-medium py-2 px-4 rounded hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
