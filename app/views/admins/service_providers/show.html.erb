<div class="border-b border-gray-300 dark:border-gray-700 mb-4 pb-2">
  <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= @service_provider.name %></h1>
</div>

<div class="flex flex-col lg:flex-row space-y-4 lg:space-y-0 lg:space-x-8">
  <div class="lg:w-2/3">
    <div class="space-y-6">
      <div>
        <h4 class="text-xl font-semibold text-gray-900 dark:text-white"><%= t('.metadata_url') %>:</h4>
        <p class="mt-2"><code class="bg-gray-100 dark:bg-gray-800 p-2 rounded" id="metadata_url"><%= @service_provider.metadata_url %></code></p>
      </div>

      <div>
        <h4 class="text-xl font-semibold text-gray-900 dark:text-white"><%= t('.response_hosts') %>:</h4>
        <p class="mt-2"><code class="bg-gray-100 dark:bg-gray-800 p-2 rounded" id="response_hosts"><%= @service_provider.response_hosts %></code></p>
      </div>

      <div>
        <h4 class="text-xl font-semibold text-gray-900 dark:text-white"><%= t('.fingerprint') %>:</h4>
        <p class="mt-2"><code class="bg-gray-100 dark:bg-gray-800 p-2 rounded" id="fingerprint"><%= @service_provider.fingerprint %></code></p>
      </div>
    </div>
  </div>

  <div class="lg:w-1/3">
    <div class="space-y-4">
      <h3 class="text-2xl font-semibold text-gray-900 dark:text-white"><%= t('.actions') %></h3>
      <%= link_to t('.edit'), edit_service_provider_path(@service_provider), class: 'inline-block bg-blue-600 text-white font-medium py-2 px-4 rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
      <%= render 'delete_form', service_provider: @service_provider, submit_btn_css: 'inline-block bg-red-600 text-white font-medium py-2 px-4 rounded hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500' %>
    </div>
  </div>
</div>
